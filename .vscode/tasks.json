{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "command": "just",
            "type": "process",
            "args": [
                "serve",
                "--dirtyreload",
                "--verbose",
            ],
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "owner": "mkdocs",
                "pattern": {
                    "regexp": "^(WARNING|ERROR)\\s+-\\s+(.+)$",
                    "kind": "file",
                    "severity": 1,
                    "message": 2,
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^INFO\\s+-\\s+\\[\\d{2}:\\d{2}:\\d{2}\\]\\s+Detected file changes",
                    "endsPattern": "^INFO\\s+-\\s+(\\[\\d{2}:\\d{2}:\\d{2}\\]\\s+Reloading browsers|Documentation built in)",
                },
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
            }
        },
        {
            "label": "Normalize",
            "detail": "Normalize current markdown file",
            "command": "just",
            "type": "shell",
            "args": [
                "normalize",
                "${file}"
            ],
            "problemMatcher": []
        }
    ]
}
